@using BlazorBlogApp.Shared 

@foreach(var post in Posts)
    {
        <div class="m-3">
            <h3 class="text-capitalize">
                @post.Title
            </h3>
            <h5>
                @post.Description
            </h5>
        </div>
    }

@code {
    public List<BlogPost> Posts { get; set; } = new List<BlogPost>
    {
        new BlogPost { Title = "It's tutorial for Blazor", Description = "This is tutorial showing you how to build a blog with Blazor"},
        new BlogPost { Title = "My first ever blog post", Description = "Hey it's my blog app with Blazor!"}
    };
}
